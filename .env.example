# ============== POLYMARKET CLOB CREDENTIALS ==============
POLYMARKET_API_KEY=your-api-key
POLYMARKET_API_SECRET=your-api-secret
POLYMARKET_API_PASSPHRASE=your-passphrase

# ============== POLYMARKET API ENDPOINTS ==============
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# ============== POLYGON BLOCKCHAIN ==============
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# ============== DATABASE ==============
DB_URL=postgresql+asyncpg://void:void_password@localhost:5432/void
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# ============== REDIS ==============
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# ============== AI SERVICES (Z.ai GLM-4.7) ==============
AI_ZAI_API_KEY=your-zai-api-key-here
AI_ZAI_MODEL=glm-4.7
AI_CONFIDENCE_THRESHOLD=0.95

# ============== TRADING CONFIGURATION ==============
TRADING_MAX_POSITION_SIZE_USD=500
TRADING_MAX_TOTAL_EXPOSURE_USD=5000
TRADING_MIN_PROFIT_MARGIN=0.01
TRADING_MAX_SLIPPAGE=0.02
TRADING_COOLDOWN_SECONDS=60

# ============== ADMIN API ==============
ADMIN_API_HOST=0.0.0.0
ADMIN_API_PORT=8000
ADMIN_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_JWT_ALGORITHM=HS256
ADMIN_JWT_EXPIRY_HOURS=24
ADMIN_API_KEY_HEADER=X-API-Key

# ============== ENCRYPTION ==============
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this

# ============== MONITORING ==============
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin

# ============== ENVIRONMENT ==============
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
